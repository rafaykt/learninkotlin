<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetalhesFragment">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#B1B1B1"

        />
    <ImageView
        android:id="@+id/image_poster_details"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_poster_details"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="15dp"
        android:text="TÃ­tulo do texto"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@id/image_poster_details"/>
    <TextView
        android:id="@+id/year_details"
        android:text="Release: 20/02/2002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_poster_details"
        app:layout_constraintStart_toStartOf="@id/image_poster_details"
        android:textSize="9sp"
        android:layout_marginTop="15dp"/>




    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_favorito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/viewHeader"
        app:layout_constraintEnd_toEndOf="@id/viewHeader"
        android:text="Favorite este filme"/>

    <ImageButton
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:src="@drawable/ic_not_favorite"
        app:layout_constraintStart_toStartOf="@id/text_favorito"
        app:layout_constraintEnd_toEndOf="@id/text_favorito"
        app:layout_constraintBottom_toTopOf="@id/text_favorito"
        android:background="#b1b1b1"
        android:tint="#000"
        />

    <TextView
        android:id="@+id/overViewDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="OverView: \t Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum sagittis ipsum ex, quis dictum erat porttitor vel. Phasellus tempus posuere convallis. Quisque massa diam, commodo vitae aliquet a, accumsan vitae lacus. Fusce cursus, enim non semper sollicitudin, sapien eros viverra felis, id fringilla sem turpis tempus ante. Ut suscipit vitae sem nec sodales. Morbi pretium enim neque, ut dictum nibh aliquam nec. Maecenas tempus tincidunt tincidunt. Vivamus vitae nisl quis ex posuere ullamcorper. Aenean consectetur in lorem ac consequat. In ultrices rutrum urna, id auctor sem volutpat in."
        />



</androidx.constraintlayout.widget.ConstraintLayout>