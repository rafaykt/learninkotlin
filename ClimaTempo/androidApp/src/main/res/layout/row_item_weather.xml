<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/forecast1"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:elevation="3dp"
        android:background="@drawable/rounded_corner"
        android:layout_margin="7dp">

    <TextView
            android:text="23/11"
            android:id="@+id/date_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/corTextos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÉU LIMPO"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/corTextos"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/date_weather"
            app:layout_constraintTop_toBottomOf="@id/date_weather"
            app:layout_constraintEnd_toEndOf="@id/date_weather" />

    <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="@id/description"
            app:layout_constraintBottom_toTopOf="@id/minimax"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintEnd_toEndOf="@id/description" />

    <TextView
            android:id="@+id/minimax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0,4ºC / 28ºC"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/corTextos"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/icon"
            android:layout_marginBottom="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

