<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  <Button
      android:id="@+id/entrada1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Horario"
      android:onClick="showTimePickerDialog" />

  <Button
      android:id="@+id/saida1"
      app:layout_constraintStart_toStartOf="@id/entrada1"
      app:layout_constraintEnd_toEndOf="@id/entrada1"
      app:layout_constraintTop_toBottomOf="@id/entrada1"
      android:layout_marginTop="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Horario"
      android:onClick="showTimePickerDialog" />

  <Button
      android:id="@+id/entrada2"
      app:layout_constraintStart_toStartOf="@id/saida1"
      app:layout_constraintEnd_toEndOf="@id/saida1"
      app:layout_constraintTop_toBottomOf="@id/saida1"
      android:layout_marginTop="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Horario"
      android:onClick="showTimePickerDialog" />


</androidx.constraintlayout.widget.ConstraintLayout>