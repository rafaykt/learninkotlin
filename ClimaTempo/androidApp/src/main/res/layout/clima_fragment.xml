<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewClima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="" />

    <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="latitude"
            android:textSize="15sp"
            android:layout_margin="10dp"
            />
    <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/latitude"
            android:text="longitude"
            android:textSize="15sp"

            android:layout_margin="10dp"
            />

    <TextView
            android:id="@+id/tv_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Cidade"
            android:textSize="45sp"
            android:layout_marginBottom="250dp"
            />


    <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_cityname"
            app:layout_constraintTop_toBottomOf="@id/tv_cityname"
            app:layout_constraintEnd_toEndOf="@id/tv_cityname"
            app:layout_constraintBottom_toBottomOf="@id/tv_cityname"
            android:paddingTop="50dp"

            android:textSize="30sp"
            android:text="30ºC"
            />

    <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_temperature"
            app:layout_constraintTop_toBottomOf="@id/tv_temperature"
            app:layout_constraintEnd_toEndOf="@id/tv_temperature"
            app:layout_constraintBottom_toBottomOf="@id/tv_temperature"
            android:paddingTop="100dp"
            android:textSize="25sp"
            android:text="Descrição"
            />

    <Button
            android:text="Get weather now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_latlong"
            app:layout_constraintBottom_toBottomOf="@+id/textViewClima"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    <com.github.pwittchen.weathericonview.WeatherIconView
            android:id="@+id/my_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_description"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:weatherIconResource="@string/wi_day_sunny_overcast"
            app:weatherIconColor="@android:color/black"
            app:weatherIconSize="100" />

</androidx.constraintlayout.widget.ConstraintLayout>